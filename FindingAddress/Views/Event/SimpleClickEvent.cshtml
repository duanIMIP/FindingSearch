@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SimpleClickEvent</title>
    <style type="text/css">
        html, body {
            width: 100%;
            padding: 0;
            margin: 0;
        }

        #map {
            width: 100%;
            height: 540px;
        }
    </style>

    <script type="text/javascript">
        var map;
        var infowindow;
        function initMap() {
            map = new google.maps.Map(document.getElementById("map"), {
                center: new google.maps.LatLng(21.027763, 105.834160),
                zoom: 4
            });
            var marker = new google.maps.Marker({ map: map, position: new google.maps.LatLng(21.027763, 105.834160), title: 'click to zoom' });
            marker.addListener('click', function () {
                map.setCenter(marker.getPosition());
                map.setZoom(map.getZoom() + 4);
            });
            map.addListener('center_changed', function () {
                window.setTimeout(() => {
                    map.panTo(marker.getPosition());
                }, 3000);                
            });
        }
    </script>
</head>
<body>
    <div id="map"></div>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB9uUyT6l-EdgGNTW1kBGz_0WJ278a3MCY&libraries=places&callback=initMap" async defer></script>
</body>
</html>
